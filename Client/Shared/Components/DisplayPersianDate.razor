@(Value)

@code
{
	protected override void OnInitialized()
	{
		var now =
			System.DateTime.Now;

		var persianCalendar =
			new System.Globalization.PersianCalendar();

		var year = persianCalendar.GetYear(time: now)
			.ToString().PadLeft(totalWidth: 4, paddingChar: '0');

		var month = persianCalendar.GetMonth(time: now)
			.ToString().PadLeft(totalWidth: 2, paddingChar: '0');

		var day = persianCalendar.GetDayOfMonth(time: now)
			.ToString().PadLeft(totalWidth: 2, paddingChar: '0');

		// 1400/1/2		-> 1400/01/02
		// 1400/11/2	-> 1400/11/02
		// 1400/1/22	-> 1400/01/22
		// 1400/11/22	-> 1400/11/22

		Value = $"{year}/{month}/{day}";
	}

	private string? Value { get; set; }
}
