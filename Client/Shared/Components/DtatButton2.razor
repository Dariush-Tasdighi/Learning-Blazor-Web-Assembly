<button type="button" class="btn btn-primary" @onclick="(e) => ButtonClicked(e)">@(Caption)</button>

@code
{
	[Parameter]
	public EventCallback<MouseEventArgs> OnClick { get; set; }

	[Parameter]
	public string Caption { get; set; } = Resources.Buttons.Submit;

	private void ButtonClicked(MouseEventArgs e)
	{
		OnClick.InvokeAsync(arg: e);
	}
}
