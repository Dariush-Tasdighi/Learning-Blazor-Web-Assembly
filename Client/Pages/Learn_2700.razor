@page "/learn_2700"

<h1>
	Basket
</h1>

<div class="row">
	<div class="col table-responsive">

		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr>
					<th>
						@(Resources.DataDictionary.RowNumber)
					</th>
					<th>
						@(Resources.DataDictionary.Name)
					</th>
					<th>
						@(Resources.DataDictionary.Price)
					</th>
					<th>
						@(Resources.DataDictionary.Count)
					</th>
					<th>
					</th>
					<th>
						@(Resources.DataDictionary.SubTotal)
					</th>
				</tr>
			</thead>

			<tbody>
				@for (var index = 0; index <= Items.Count - 1; index++)
				{
					var item = Items[index];

					<tr>
						<td>
							@(index + 1)
						</td>
						<td>
							@(item.ProductName)
						</td>
						<td>
							@(item.ProductPrice)
						</td>
						<td>
							@(item.ProductCount)
						</td>
						<td>
							<button type="button" class="btn btn-primary btn-sm" @onclick="() => Plus(item: item)">+</button>
							<button type="button" class="btn btn-primary btn-sm" @onclick="() => Minus(item: item)">-</button>
						</td>
						<td>
							@(GetSubTotal(item: item))
							@*@(item.ProductPrice * item.ProductCount)*@
						</td>
					</tr>
				}

				<tr>
					<td colspan="5">
						Total:
					</td>
					<td>
						@(GetTotal())
					</td>
				</tr>
			</tbody>
		</table>

	</div>
</div>

@code
{
	protected override void OnInitialized()
	{
		for (var index = 1; index <= 5; index++)
		{
			var item =
				new ViewModels.BasketItemViewModel
					{
						ProductCount = 1,
						ProductPrice = index * 100,
						ProductName = $"Product {index}",
					};

			Items.Add(item: item);
		}
	}

	private List<ViewModels.BasketItemViewModel> Items { get; set; } = [];

	private void Plus(ViewModels.BasketItemViewModel item)
	{
		if (item.ProductCount < 10)
		{
			item.ProductCount++;
		}
	}

	private void Minus(ViewModels.BasketItemViewModel item)
	{
		if (item.ProductCount > 0)
		{
			item.ProductCount--;
		}
	}

	private int GetSubTotal(ViewModels.BasketItemViewModel item)
	{
		// Solution (1)
		//return (item.ProductPrice * item.ProductCount);
		// /Solution (1)

		// Solution (2)
		//return item.ProductPrice * item.ProductCount;
		// /Solution (2)

		// Solution (3)
		//var result =
		//	item.ProductPrice * item.ProductCount;

		//return result;
		// /Solution (3)

		// Solution (4)
		var result =
			item.ProductPrice * item.ProductCount;

		if (item.ProductCount > 5)
		{
			result =
				(int)((decimal)(result * 95) / 100);
		}
		// /Solution (4)

		return result;
	}

	private int GetTotal()
	{
		// Solution (1)
		//var result = 0;

		//foreach (var item in Items)
		//{
		//	result +=
		//		item.ProductPrice * item.ProductCount;
		//}
		// /Solution (1)

		// Solution (2)
		var result = 0;

		foreach (var item in Items)
		{
			result +=
				GetSubTotal(item: item);
		}
		// /Solution (2)

		return result;
	}
}
